<div class="modal-content">
  <div class="modal-header">
    <div data-dismiss="modal" aria-label="Close" class="close">
      <%= image_tag '_common/close_modal.svg' %>
    </div>
    <h5 class="modal-title">Sign Up For Email Discounts</h5>
  </div>
  <div class="modal-body">
    <%= form_for(@subscription, { remote: true, authenticity_token: true }) do |f| %>
      <% if @subscription.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">The following errors occured:</h4>
        <% @subscription.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
      <% end %>
      <div class="form-group">
        <%= f.label(:name) %>
        <%= f.text_field(:name, class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= f.label(:email) %>
        <%= f.email_field(:email, class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= f.submit('Sign Up', class: 'button blue') %>
      </div>
    <% end %>
  </div>
</div>
